[core]
    excludesfile = ~/.gitignore_global
    editor = /usr/bin/env nvim
[user]
    name = Michael Dyrynda
    email = michael@dyrynda.com.au
    signingkey = 6C7291F4FF64187A3312A765DB6707E977DAA4D4
[push]
    default = current
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
    process = git-lfs filter-process
[alias]
    bn = "!git rev-parse --abbrev-ref HEAD"
    rbm = "!git rebase -i `git merge-base master $(git branch-name)`"
    d = difftool
    last-tag = describe --abbrev=0 --tags
    switch = !legit switch
    sync = !legit sync
    publish = !legit publish
    unpublish = !legit unpublish
    undo = !legit undo
    branches = !legit branches
    dc = diff --cached
    amend = commit --amend
    ff = merge --ff-only
    noff = merge --no-ff

    forget="! git fetch -p && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D"
    forgetlist="! git fetch -p && git branch -vv | awk '/: gone]/{print $1}'"
[diff]
    external = difft
    tool = difftastic
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft --background dark --color always --tab-width 4 "$LOCAL" "$REMOTE"
[color]
    ui = true
[commit]
    gpgsign = true
[pull]
    rebase = true
[init]
    defaultBranch = main
[gpg]
    program = /usr/local/MacGPG2/bin/gpg
[credential]
    helper = cache
[remote "origin"]
    prune = true
[pager]
    difftool = true
