[core]
    excludesfile = ~/.gitignore_global
    editor = /usr/bin/env nvim
    pager = delta
[user]
    name = Michael Dyrynda
    email = michael@dyrynda.com.au
    signingkey = 6C7291F4FF64187A3312A765DB6707E977DAA4D4
[push]
    default = current
[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true
    process = git-lfs filter-process
[alias]
    bn = "!git rev-parse --abbrev-ref HEAD"
    rbm = "!git rebase -i `git merge-base master $(git branch-name)`"
    d = difftool
    last-tag = describe --abbrev=0 --tags
    switch = !legit switch
    sync = !legit sync
    publish = !legit publish
    unpublish = !legit unpublish
    undo = !legit undo
    branches = !legit branches
    dc = diff --cached
    amend = commit --amend
    ff = merge --ff-only
    noff = merge --no-ff

    forget="! git fetch -p && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D"
    forgetlist="! git fetch -p && git branch -vv | awk '/: gone]/{print $1}'"
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[interactive]
    diffFilter = delta --color-only
[delta]
    syntax-theme = "Nord"
    features = decorations
    whitespace-error-style = 22 reverse
[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[color]
    ui = true
[commit]
    gpgsign = true
[pull]
    rebase = true
[init]
    defaultBranch = main
[gpg]
    program = /usr/local/MacGPG2/bin/gpg
[credential]
    helper = cache
[remote "origin"]
	prune = true
