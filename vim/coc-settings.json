{
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "•",
  "diagnostic.hintSign": "•",
  "git.enableGutters": true,
  "phpls.path": "~/.node/bin/intelephense",
  "intelephense.completion.maxItems": 100,
  "intelephense.completion.insertUseDeclaration": true,
  "intelephense.completion.triggerParameterHints": false,
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,
  "intelephense.environment.phpVersion": "8",
  "intelephense.files.maxSize": 1000000,
  "intelephense.format.enable": true,
  "tailwindCSS.emmetCompletions": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact"
  ]
}
